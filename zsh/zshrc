## terminal title {{{
case "${TERM}" in
  kterm*|xterm*)
    if [[ -n $STY ]]; then  ## screen
      preexec(){
        print -Pn "\ek$1\e\\"  ## window title (latest command)
      }
      precmd(){
        ## title on terminal
        print -Pn "\033P\033]0;@${HOST%%.*}:${PWD}\007\033\\"
      }
    else
    precmd(){
      print -Pn "\e]0;@${HOST%%.*}:${PWD}\a"
    }
    fi
    ;;
  screen*)
    preexec(){
      print -Pn "\ek$1\e\\"  ## window title (latest command)
    }
    precmd(){
      ## title on terminal
      #printf "\033P\033]0;@${HOST%%.*}:${PWD}\007\033\\"
      print -Pn "\e]0;@${HOST%%.*}:${PWD}\a"
    }
    ;;
esac
# }}}
